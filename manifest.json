{
	"manifest_version": 3,
	"name": "AdFriend",
	"version": "1.0",
	"description": "Transform ads into positive content",
	"permissions": ["storage", "activeTab", "scripting"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["styles.css"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_popup": "options.html"
	},
	"options_page": "options.html"
}
